#30 derecenin sinusunu hesaplayalim
derece = 30
radyan=math.radians(derece)
print(radyan)
sinus=math.sin(radyan)
print(sinus)

#30 derecenin sinusunu tek adimda kullanmak istersek
derece=30
sinus=math.sin(math.radians(derece))
print(sinus)


#kendisine parametre olarak verilen bir sayinin kupunu hesaplayip geri donen bir fonksiyon yazalim
def cube(n):
    n_kup=n**3
    return n_kup
sayi=4
sayinin_kubu=cube(4)
print(sayinin_kubu)
